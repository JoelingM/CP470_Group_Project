<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textFood"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/ab_nameFood"
        android:textAlignment="textEnd"/>

    <TextView
        android:id="@+id/textCalories"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/textFood"
        android:layout_alignParentStart="true"
        android:text="@string/ab_CaloriesFood" />

    <TextView
        android:id="@+id/textFat"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/textCalories"
        android:layout_alignParentStart="true"
        android:text="@string/ab_fatFood"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/button7"
        android:layout_alignParentStart="true"
        android:text="@string/ab_descriptionFood" />

    <EditText
        android:id="@+id/Foodname"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:ems="10"
        android:layout_toRightOf ="@id/textFood"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/FoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/Foodname"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/textCalories"
        android:ems="10"
        android:inputType="none|number|numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/FoodFat"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/FoodCalories"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/textFat"
        android:ems="10"
        android:inputType="none|number|numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textDescription"
        android:layout_alignParentBottom="true"
        android:hint="@string/ab_foodHint"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ab_foodEntry"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/FoodFat"
        android:onClick="returnToMain"/>


</RelativeLayout>