<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/call_button"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintDimensionRatio="H,1:0.15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical|end"
        app:autoSizeTextType="uniform"
        />

    <ImageButton
        android:id="@+id/call_button"
        app:layout_constraintTop_toTopOf="@+id/number"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintEnd_toStartOf="@id/sms_button"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/nc_phone"
        />

    <ImageButton
        android:id="@+id/sms_button"
        app:layout_constraintTop_toTopOf="@+id/number"
        app:layout_constraintBottom_toBottomOf="@+id/number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.075"
        app:layout_constraintDimensionRatio="H,1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/nc_text"
        />
</androidx.constraintlayout.widget.ConstraintLayout>